{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": [ "ESNext" ],
    "sourceMap": true,
    "types": [ "node" ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
