{
  "compilerOptions": {
    "strict": true,

    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": true,

    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/commands", "src/events"]
}
