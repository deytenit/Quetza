{
    "compilerOptions": {
        "strict": true,

        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist",
        "removeComments": false,
        "sourceMap": true,
        "esModuleInterop": true,

        "target": "ESNext",
        "lib": ["ESNext"],
        "types": ["node"],
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
