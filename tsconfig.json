{
  "compilerOptions": {
    "strict": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "$config": ["config.js"],
      "$lib/*": ["src/lib/*"],
      "$modules/*": ["src/modules/*"]
    },
    "resolveJsonModule": true,
    "types": ["node"],

    "outDir": "dist",
    "sourceMap": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "target": "ES2022",

    "skipLibCheck": true
  },
  "include": ["src/**/*", "config.ts"],
  "exclude": ["node_modules", "dist"]
}
