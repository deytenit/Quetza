{
  "semi": true,
  "trailingComma": "none",
  "singleQuote": false,
  "printWidth": 100,
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "crlf",
  "overrides": [
    {
      "files": ["**/*.json, **/*.yml"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["**/*.ts"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
